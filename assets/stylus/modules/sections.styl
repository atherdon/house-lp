.two-column-section
	.container-fluid
			display flex
	.right-column,
	.left-column
		width 50%
		
/* WELCOME SECTION */
.welcome-section
	display flex
	height calc(100vh - 60px)
	background url('../images/banner-a.png')
	background-size cover
	background-repeat no-repeat
	h1
		background-color rgba(39,174,166,0.5)
		color white
		padding-left 150px
		margin-bottom 0px
		width 60%
		min-width 480px
		span
			text-transform uppercase
			color white
	h2
		background-color white
		color #173b63
		padding-left 150px
		min-width 450px
		margin-top 0px
		width 50%
	.right-column
		display flex
		height 100%
		align-items flex-end
		justify-content flex-end
.text-section
	min-height 285px
	display flex
	align-items center
.benefit-section
	background $color-blue
	color white
	text-align center
	z-index 2
	padding-top 60px
	.benefit-block
		width 70%
		margin auto	
		img
			width 120px 
		 		
.benefit-section .benefit-block img
	width 120px

.circle-image-section
	position relative
	min-height 500px
	background-color $color-green
	&.image-left .image-wrapper,
	&.image-right .image-wrapper
		position absolute
		width 70%
		top 0
		border-radius 50%
		overflow hidden
		background-image url('../images/circle-photo-1.jpg')
		background-position center center
		background-repeat no-repeat
		z-index 1
	&.image-left .image-wrapper
		border-top-right-radius 0%
		right -10%
	&.image-right .image-wrapper
		border-top-left-radius 0%
		left -10%
	.text-wrapper
		color white
.circle-image-section
	position relative
	min-height 500px
	&.image-right .image-wrapper
		position absolute
		left -20%
		top -20%
		width 70%
		border-radius 50%
		overflow hidden
		z-index -1
		
.parameters-section
	h2
		color $color-green
		text-align center
	h3
		text-align center
		color white
		padding 20px 0px
		font-size 30px
	.parameters-block
		h4,
		p span
			color $color-blue
			
/* Quote section */			
.quote-section
	min-height 600px
	display flex
	align-items center
	background-image url('../images/banner-c.jpg')
	background-size cover
	background-repeat no-repeat
	background-position center center
	blockquote
		background rgba(39,174,166,0.5)
		max-width 1000px
		position relative
    	marign auto 0
    	padding 10px 60px
    	quotes "\201C""\201D""\2018""\2019"
    	border none
	h2
		background rgba(39,174,166,.5)
    	display inline-block
    	padding 5px 25px
    	
.quote-section *
	color white
	
.quote-section > blockquote      	
	background-color rgba(39,174,166,0.5)
	max-width 1000px
	position relative
	marign auto 0
	padding 10px 60px
	quotes "\201C""\201D""\2018""\2019"
	border none
	
.slider
	max-width 70%
	margin auto
.form-section
	background-image url('../images/form-background.jpg')
	background-size cover
	background-repeat no-repeat
	background-position center center
	min-height       400px
		
/* Garden section */		
.garden-section.circle-image-section 
	.image-wrapper
		background-image url('../images/banner-d.jpg')
		
.rest-with-your-friends.circle-image-section 
	.image-wrapper
		background-image url('../images/banner-b.jpg')
		
				
#communication
	.container-fluid
		padding-left 90px
		padding-right 90px		
		
/* Photogallery  */		
.controls .fa.fa-6x
	font-size 6em

.row.row-with-three-inputs input
	height 28px		
	
.row.row-with-three-inputs input,
.row.row-with-three-inputs select,
.row.row-with-three-inputs .select2.select2-container.select2-container--default
	width 100px
	text-align center
	color black
	
.select2-container.select2-container--default .select2-selection--single
	border-radius 0px 

.select2-container.select2-selection--single .select2-selection__rendered
	padding-left 18px 	
.js-select-placeholder
	width 100%
	
		