.navbar-default .nav-links .show-on-responsive
	display none
	@media (max-width: 767px)
		display block 

.navbar-default .nav-links	a
	@media(min-width: 768px) and (max-width: 991px)
		padding-left 5px
		padding-right 5px

.navbar-default .nav-button-messenger
	@media(min-width: 768px) and (max-width: 991px)
		margin-top 3px
	@media (min-width: 992px)
		margin-top 5px
	@media (min-width: 1200px)	
		margin-top 0px
		
.nav-button-messenger
	width 20px
	height 20px
.navbar
	border-top 30px solid $color-green
	background white
	box-shadow 0px 0px 10px 0px black
.nav-button-messenger
	width 30px
	height 30px
	padding 0px!important
	margin-right: 10px
	img
		width 40px
		height 40px
.nav-button.navbar-contact
	display inline-block
	padding 5px 15px
	color white!important
	border-radius 4px
	margin-right 10px
	& > div
		float left
		margin-right 10px
	
	&.mail
		background linear-gradient(#6aaef0, #4477a8)
	&.phone
		background linear-gradient(#fe4545, #ab2a2a)
		
.nav-button.navbar-contact div
	@media(min-width: 768px) and (max-width: 991px)
		display none	

.nav.navbar-nav
	padding-top 15px
	padding-bottom 15px				
.nav.navbar-icons	
	.nav-button.navbar-contact
		padding 8px 20px
		margin-right 25px
		@media (min-width: 1200px)
			margin-right 16px
	.nav-button-messenger
		margin-right 25px	/* check this */	
.navbar-default .navbar-nav > li.active > a,
.navbar-default .navbar-nav > li.active > a:hover,
.navbar-default .navbar-nav > li.active > a:focus	
	color #fe614e
	background-color transparent		
	
.tooltip-danger + .tooltip > .tooltip-inner
	color #fff
	background-color #f96868
.tooltip-danger + .tooltip > .tooltip-arrow
	border-bottom-color #f96868

.tooltip-warning + .tooltip .tooltip-inner 
	color #fff
	background-color #f2a654	
.tooltip-warning + .tooltip > .tooltip-arrow
	border-bottom-color #f2a654	
