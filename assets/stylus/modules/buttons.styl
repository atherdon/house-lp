.default-button
	padding 15px 20px
	text-transform uppercase
	color white
	height 80px
	display inline-block	
	outline none
	text-decoration none
	&:hover
		color white
	&:active, &:focus
		outline 0
		border none
		-moz-outline-style none
		color white			
	&:visited
		color white
		text-decoration none	
	img
		vertical-align middle
	span
		display inline-block	
		vertical-align middle
		padding-top 10px	
		
.default-button.orange-background,
.orange-background
	background-color $color-orange
	div 
		float left
		margin-right 10px	
	span
		@media (min-width 1500px)	
			margin-top 0px
		
.default-button.red-background,
.red-background
	background-color $color-red
	

.default-button.below-bottom-line
	position relative
	width 100%
	text-align center
	
	
