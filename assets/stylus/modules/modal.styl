.modal-header
	padding 15px 20px
	border-bottom none
.modal 
	button.close 
		color white
		&:hover
			opacity 0.9
			color white
	input
		border-radius 0px
		height 52px
	.row-big-inputs > input
		height 28px
	.modal-content	
		border-color #999999
		background-color #0A75A7
		color white
		border-radius 0	
	.modal-title
		color white
		
.modal .error
	display none		